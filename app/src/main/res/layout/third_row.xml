<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/margin_top_5"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/widget_symbol_line3_text_view"
        style="@style/WidgetSymbol"
        android:gravity="center"
        tools:text="Symbol"/>

    <TextView
        android:id="@+id/widget_price_line3_text_view"
        style="@style/WidgetPrice"
        android:gravity="center"
        tools:text="price"/>

    <TextView
        android:id="@+id/widget_percent_line3_text_view"
        style="@style/WidgetPercent"
        android:gravity="center"
        tools:text="percent"/>

</LinearLayout>